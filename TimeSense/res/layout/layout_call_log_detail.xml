<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/White">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="30dp"
        android:textColor="@color/DeepSkyBlue" >

        <Button
            android:id="@+id/butBack"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:fontFamily="normal"
            android:gravity="left|center"
            android:text="Back"
            android:textColor="@color/DeepSkyBlue"
            android:drawableStart="@drawable/ic_action_previous_item"
            android:textSize="18dp"
            android:textStyle="normal" />

         <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/WhiteSmoke" />
         
            <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/White" />
         
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/White" >

             <TextView
                android:id="@+id/txtViewName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:fontFamily="sans-serif-condensed"
                android:text=""
                android:textColor="@color/DeepSkyBlue"
                android:textSize="25dp"
                android:textStyle="bold" />
             
            <TextView
                android:id="@+id/txtViewPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:fontFamily="sans-serif-condensed"
                android:text="+9197234723949"
                android:textColor="@color/Gray"
                android:textSize="35dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtViewCallType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:fontFamily="normal"
                android:text="Outgoing call"
                android:textColor="@color/Gray"
                android:textSize="18dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txtViewDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:fontFamily="normal"
                android:text="1:334"
                android:textColor="@color/Gray"
                android:textSize="15dp"
                android:textStyle="normal" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/White" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

          <ImageView
                android:id="@+id/txtViewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingRight="10dp"
                android:src="@drawable/ic_call" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:fontFamily="normal"
                android:padding="3dp"
                android:text="Recipient"
                android:textColor="@color/Black"
                android:textSize="16dp"
                android:textStyle="normal" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/WhiteSmoke" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtViewRecipientTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:fontFamily="sans-serif-condensed"
                android:paddingTop="3dp"
                android:text=""
                android:textColor="@color/DeepSkyBlue"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtViewRecipientDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:fontFamily="normal"
                android:text=""
                android:textColor="@color/DeepSkyBlue"
                android:textSize="15dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txtViewRecipientTimeZone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:fontFamily="normal"
                android:text=""
                android:textColor="@color/DeepSkyBlue"
                android:textSize="15dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txtViewRecipientCountry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:fontFamily="normal"
                android:text=""
                android:textColor="@color/DeepSkyBlue"
                android:textSize="15dp"
                android:textStyle="normal" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/White" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

        <ImageView
                android:id="@+id/txtViewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingRight="10dp"
                android:src="@drawable/ic_call" /> 

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:fontFamily="normal"
                android:padding="3dp"
                android:text="Your"
                android:textColor="@color/Black"
                android:textSize="16dp"
                android:textStyle="normal" />
        </LinearLayout>

        <TextView
            android:id="@+id/primerdivisor"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/WhiteSmoke"
            android:padding="3dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtViewHomeTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:fontFamily="sans-serif-condensed"
                android:paddingTop="3dp"
                android:text=""
                android:textColor="@color/Black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtViewHomeDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:fontFamily="normal"
                android:text=""
                android:textColor="@color/Gray"
                android:textSize="15dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txtViewHomeTimeZone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:fontFamily="normal"
                android:text=""
                android:textColor="@color/Gray"
                android:textSize="15dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txtViewHomeCountry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:fontFamily="normal"
                android:text=""
                android:textColor="@color/Gray"
                android:textSize="15dp"
                android:textStyle="normal" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/White" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/WhiteSmoke" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/White" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
           
            <Button
                android:id="@+id/butDelete"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/Tomato"
                android:fontFamily="normal"
                android:gravity="center"
                android:src="@drawable/ic_action_save"
                android:text="DELETE"
                android:textColor="@color/White"
                android:textSize="18dp"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>