<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alphaLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center|center"
    android:background="@color/Slate"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:id="@+id/alphaLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center|center"
        android:background="@color/Black"
        android:orientation="vertical"
        android:padding="10dp" >

        <!--
             <Button
            android:id="@+id/buttonclose"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/Black"
            android:gravity="right|right"
            android:paddingRight="10dp"
            android:drawableRight="@drawable/ic_action_remove"
            android:textColor="@color/Black" />
        -->

        <LinearLayout
            android:id="@+id/alphaLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/Black"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/imgButDiscard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/Black"
                android:src="@drawable/ic_action_call"
                android:textColor="@color/Black" />

            <TextView
                android:id="@+id/txtVwPrefix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@color/Black"
                android:fontFamily="normal"
                android:gravity="center|center"
                android:text="CALL PREFIX"
                android:textColor="@color/DeepSkyBlue"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:id="@+id/primerdivisor"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@color/Gray" />

        <ListView
            android:id="@+id/listVwPrefix"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="0.7"
            android:cacheColorHint="@color/DeepSkyBlue"
            android:divider="@color/Gray"
            android:dividerHeight="0dip"
            android:padding="5dp" />

        <!--
             <Button
            android:id="@+id/buttonAddPrefix"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/Black"
            android:drawableLeft="@drawable/ic_action_add_dial_prefix"
            android:gravity="left|center"
            android:text="  Add"
            android:textColor="@color/DeepSkyBlue"
            android:textSize="15dp"
            android:textStyle="bold" />
        -->

        <LinearLayout
            android:id="@+id/alphaLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center"
            android:background="@color/Black"
            android:orientation="horizontal"
            android:padding="10dp" >

            <Button
                android:id="@+id/buttonAddPrefix"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_weight="1.0"
                android:background="@color/Slate"
                android:fontFamily="normal"
                android:text="ADD PREFIX"
                android:textColor="@color/DeepSkyBlue"
                android:textSize="15dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonclose"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_weight="1.0"
                android:background="@color/Slate"
                android:fontFamily="normal"
                android:text="CLOSE"
                android:textColor="@color/DeepSkyBlue"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>