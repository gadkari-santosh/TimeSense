<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/Slate"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/Black"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/txtVwPrefix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@color/Black"
            android:fontFamily="normal"
            android:layout_gravity="center|center"
            android:text="TIME RANGE"
            android:textColor="@color/DeepSkyBlue"
            android:textSize="18dp"
            android:textStyle="bold" />

        <View
            android:id="@+id/primerdivisor"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@color/Slate" />

        <TextView
            android:id="@+id/txtViewRangeFrom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Time(24HR) From 08:00"
            android:textColor="@color/White" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@color/Black"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/txtViewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/time_range"
                android:textColor="@color/Gray" />

            <SeekBar
                android:id="@+id/seekFrom"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:max="23"
                android:progress="8" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtViewRangeTo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Time(24HR) To 20:00"
            android:textColor="@color/White" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@color/Black"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/txtViewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/time_range"
                android:textColor="@color/Gray" />

            <SeekBar
                android:id="@+id/seekTo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:max="23"
                android:progress="20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/Black"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/buttonOk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@color/Slate"
                android:text="Ok"
                android:textColor="@color/DeepSkyBlue" />

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@color/Black" />

            <Button
                android:id="@+id/buttonCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@color/Slate"
                android:max="23"
                android:progress="20"
                android:text="Cancel"
                android:textColor="@color/DeepSkyBlue" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>